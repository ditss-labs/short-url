    <!-- Bottom Navigation for Mobile -->
    <div class="fixed bottom-0 left-0 right-0 glass-card rounded-t-3xl p-4 mobile-only z-50">
        <div class="grid grid-cols-4 gap-2">
            <a href="/dashboard" class="p-3 rounded-xl bg-gray-800/50 text-center flex flex-col items-center gap-1">
