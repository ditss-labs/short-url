                <span class="text-xs text-gray-400">Home</span>
            </a>
            <a href="<%= shortUrl %>" target="_blank" class="p-3 rounded-xl bg-gray-800/50 text-center flex flex-col items-center gap-1">
                <i class="fas fa-external-link-alt text-blue-400"></i>
                <span class="text-xs text-gray-400">Visit</span>
            </a>
            <button onclick="downloadQR('png')" class="p-3 rounded-xl bg-gray-800/50 text-center flex flex-col items-center gap-1">
                <i class="fas fa-download text-emerald-400"></i>
                <span class="text-xs text-gray-400">Download</span>
            </button>
            <a href="/" class="p-3 rounded-xl gradient-bg text-center flex flex-col items-center gap-1">
                <i class="fas fa-plus text-white"></i>
                <span class="text-xs text-white">New</span>
            </a>
        </div>
    </div>

    <!-- Toast Notification -->
    <div id="toast" class="fixed bottom-20 lg:bottom-6 right-4 left-4 lg:right-6 lg:left-auto bg-gradient-to-r from-gray-900 to-gray-800 text-white px-4 py-3 lg:px-6 lg:py-4 rounded-xl shadow-2xl font-medium flex items-center gap-3 z-50 hidden max-w-md mx-auto lg:mx-0">
        <i class="fas fa-check-circle text-emerald-400"></i>
        <span id="toastMessage" class="flex-1 text-sm lg:text-base"></span>
        <button onclick="hideToast()" class="text-gray-400 hover:text-white">
            <i class="fas fa-times"></i>
        </button>
    </div>

    <script>
        // Copy URL with enhanced feedback
        async function copyShortUrl(url) {
            try {
                await navigator.clipboard.writeText(url);
                
                const copyIcon = document.getElementById('copyIcon');
                const copyText = document.getElementById('copyText');
                
                // Show success feedback
                showToast('URL copied to clipboard!');
                
                // Animate the copy button
                copyIcon.className = 'fas fa-check text-emerald-400';
                copyText.textContent = 'Copied!';
                
                // Reset after 2 seconds
                setTimeout(() => {
                    copyIcon.className = 'fas fa-copy';
                    copyText.textContent = 'Copy URL';
                }, 2000);
                
            } catch (err) {
                showToast('Failed to copy URL', 'error');
            }
        }
        
        // Download QR code
        function downloadQR(format) {
            const qrImg = document.querySelector('img[src*="<%= qrCode %>"]');
            const link = document.createElement('a');
            
            if (format === 'png') {
                link.href = qrImg.src;
                link.download = `asuma-qr-<%= shortId %>.png`;
                showToast('Downloading QR code as PNG...');
            } else if (format === 'svg') {
                // Convert to SVG (this is a simplified version)
                // In a real app, you would have an SVG endpoint
                link.href = qrImg.src.replace(/\.png$/, '.svg');
                link.download = `asuma-qr-<%= shortId %>.svg`;
                showToast('Downloading QR code as SVG...');
            }
            
            link.click();
            
            // Show success toast after a delay
            setTimeout(() => {
                showToast('QR code downloaded successfully!');
            }, 1000);
        }
        
        // Print QR code
        function printQR() {
            const printWindow = window.open('', '_blank');
            printWindow.document.write(`
                <!DOCTYPE html>
                <html>
                <head>
                    <title>QR Code - <%= shortId %></title>
                    <style>
                        @media print {
                            body { 
                                font-family: Arial, sans-serif; 
                                padding: 20px; 
                                text-align: center; 
                                max-width: 800px;
                                margin: 0 auto;
                            }
                            .no-print { display: none; }
                            .qr-container { 
                                margin: 20px auto; 
                                max-width: 300px;
                                padding: 15px;
                                background: white;
                                border-radius: 10px;
                                box-shadow: 0 5px 15px rgba(0,0,0,0.1);
                            }
                            .info { 
                                background: #f8fafc; 
                                padding: 15px; 
                                border-radius: 8px; 
                                margin: 20px 0; 
                                text-align: left;
                            }
                            h1 { color: #333; margin-bottom: 10px; font-size: 24px; }
                            p { color: #666; margin: 8px 0; font-size: 14px; }
                            strong { color: #333; }
                        }
                        @media screen {
                            body { padding: 40px; }
                            button { 
                                padding: 10px 20px; 
                                background: #4f46e5; 
                                color: white; 
                                border: none; 
                                border-radius: 5px; 
                                cursor: pointer;
                                margin: 20px;
                            }
                        }
                    </style>
                </head>
                <body>
                    <h1>ASUMA Link QR Code</h1>
                    <div class="info">
                        <p><strong>Short URL:</strong> <%= shortUrl %></p>
                        <p><strong>Short ID:</strong> <%= shortId %></p>
                        <p><strong>Total Clicks:</strong> <%= clicks %></p>
                        <p><strong>Generated:</strong> ${new Date().toLocaleDateString()}</p>
                        <p><strong>Instructions:</strong> Scan this QR code with any smartphone camera</p>
                    </div>
                    <div class="qr-container">
                        <img src="<%= qrCode %>" alt="QR Code" style="width: 100%;">
                    </div>
                    <p class="no-print"><br>This QR code will automatically redirect to: <%= shortUrl %></p>
                    <button onclick="window.print()" class="no-print">Print QR Code</button>
                    <button onclick="window.close()" class="no-print">Close Window</button>
                    <script>
                        window.onload = function() {
                            // Auto-print on load
                            setTimeout(() => window.print(), 500);
                        };
                    <\/script>
                </body>
                </html>
            `);
            printWindow.document.close();
        }
        
        // Toast notification system
        function showToast(message, type = 'success') {
            const toast = document.getElementById('toast');
            const toastMessage = document.getElementById('toastMessage');
            
            // Set message and type
            toastMessage.textContent = message;
            
            // Set icon based on type
            const icon = toast.querySelector('i');
            if (type === 'error') {
                icon.className = 'fas fa-exclamation-circle text-red-400';
                toast.style.background = 'linear-gradient(to right, #7f1d1d, #991b1b)';
            } else if (type === 'warning') {
                icon.className = 'fas fa-exclamation-triangle text-yellow-400';
                toast.style.background = 'linear-gradient(to right, #854d0e, #a16207)';
            } else {
                icon.className = 'fas fa-check-circle text-emerald-400';
                toast.style.background = 'linear-gradient(to right, #0f172a, #1e293b)';
            }
            
            // Show toast
            toast.style.display = 'flex';
            toast.style.opacity = '0';
            toast.style.transform = 'translateY(20px)';
            
            // Animate in
            setTimeout(() => {
                toast.style.opacity = '1';
                toast.style.transform = 'translateY(0)';
                toast.style.transition = 'all 0.3s ease-out';
            }, 10);
            
            // Auto-hide after 4 seconds
            const autoHide = setTimeout(() => {
                hideToast();
            }, 4000);
            
            // Store timeout ID for clearing if manually closed
            toast.currentTimeout = autoHide;
        }
        
        function hideToast() {
            const toast = document.getElementById('toast');
            
            // Clear any existing timeout
            if (toast.currentTimeout) {
                clearTimeout(toast.currentTimeout);
            }
            
            // Animate out
            toast.style.opacity = '0';
            toast.style.transform = 'translateY(20px)';
            
            // Hide after animation
            setTimeout(() => {
                toast.style.display = 'none';
            }, 300);
        }
        
        // Add CSS for toast animations
        const style = document.createElement('style');
        style.textContent = `
            @keyframes fadeInUp {
                from { opacity: 0; transform: translateY(20px); }
                to { opacity: 1; transform: translateY(0); }
            }
            @keyframes fadeOutDown {
                from { opacity: 1; transform: translateY(0); }
                to { opacity: 0; transform: translateY(20px); }
            }
            
            /* Mobile touch improvements */
            @media (max-width: 768px) {
                button, a {
                    -webkit-tap-highlight-color: transparent;
                }
                
                .glass-card, .glass {
                    -webkit-backdrop-filter: blur(12px);
                    backdrop-filter: blur(12px);
                }
            }
        `;
        document.head.appendChild(style);
        
        // Initialize page
        document.addEventListener('DOMContentLoaded', function() {
            // Add floating animation to QR container
            const qrContainer = document.querySelector('.qr-container');
            if (qrContainer) {
                qrContainer.classList.add('float');
            }
            
            // Mobile-specific optimizations
            if (window.innerWidth <= 768) {
                // Prevent zoom on input focus
                document.addEventListener('touchstart', function(e) {
                    if (e.target.tagName === 'INPUT' || e.target.tagName === 'TEXTAREA') {
                        document.body.style.zoom = "100%";
                    }
                }, { passive: true });
                
                // Better touch handling
                document.querySelectorAll('button, a').forEach(el => {
                    el.style.cursor = 'pointer';
                });
            }
            
            // Show welcome toast after a short delay
            setTimeout(() => {
                showToast('QR code ready! Tap and hold to save image.');
            }, 800);
        });
        
        // Handle window resize
        window.addEventListener('resize', function() {
            // Update any responsive elements if needed
        });
    </script>
</body>
</html>
