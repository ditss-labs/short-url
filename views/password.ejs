<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Password Required - ASUMA Link</title>
    
    <!-- Tailwind via CDN -->
    <script src="https://cdn.tailwindcss.com"></script>
    
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    
    <!-- Google Fonts - Inter for modern typography -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet" />
    
    <!-- Custom Styles -->
    <style>
        body {
            font-family: 'Inter', system-ui, sans-serif;
            background: linear-gradient(135deg, #f0f9ff 0%, #e6f0ff 100%);
            overflow-x: hidden;
        }
        .card-glow {
            box-shadow: 0 10px 30px -10px rgba(79, 70, 229, 0.25);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }
        .card-glow:hover {
            transform: translateY(-4px);
            box-shadow: 0 16px 40px -12px rgba(79, 70, 229, 0.4);
        }
        input:focus {
            border-color: #4F46E5;
            outline: none;
            box-shadow: 0 0 0 3px rgba(79, 70, 229, 0.2);
        }
        .btn-gradient {
            background: linear-gradient(135deg, #6366f1, #8b5cf6);
            transition: all 0.3s cubic-bezier(0.25, 0.8, 0.25, 1);
        }
        .btn-gradient:hover {
            background: linear-gradient(135deg, #4F46E5, #7C3AED);
            transform: translateY(-2px);
            box-shadow: 0 6px 16px rgba(79, 70, 229, 0.4);
        }
        .pulse {
            animation: pulse 2s infinite;
        }
        @keyframes pulse {
            0% { box-shadow: 0 0 0 0 rgba(139, 92, 246, 0.4); }            70% { box-shadow: 0 0 0 10px rgba(139, 92, 246, 0); }
            100% { box-shadow: 0 0 0 0 rgba(139, 92, 246, 0); }
        }
        #tsparticles {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            z-index: -1;
            pointer-events: none;
        }
    </style>
</head>
<body class="min-h-screen flex items-center justify-center p-4 relative">
    <!-- Particles Background -->
    <div id="tsparticles"></div>

    <div class="max-w-md w-full">
        <div class="bg-white rounded-2xl shadow-xl card-glow overflow-hidden">
            <div class="p-8">
                <div class="text-center mb-8">
                    <div class="inline-flex items-center justify-center p-4 bg-gradient-to-r from-indigo-500 to-purple-600 rounded-2xl shadow-lg mb-6 pulse">
                        <i class="fas fa-lock text-3xl text-white"></i>
                    </div>
                    <h1 class="text-3xl font-bold text-gray-800 mb-2">Secure Access Required</h1>
                    <p class="text-gray-600">This link is protected with a password</p>

                    <% if (locals.maxClicks) { %>
                    <div class="mt-5 p-3 bg-blue-50 border border-blue-200 rounded-xl">
                        <div class="flex items-center text-blue-700">
                            <i class="fas fa-hourglass-half mr-2"></i>
                            <span class="text-sm">
                                Expires after <span class="font-semibold"><%= maxClicks %></span> views 
                                (<%= locals.currentClicks || 0 %> used)
                            </span>
                        </div>
                    </div>
                    <% } %>
                </div>

                <!-- Error Message -->
                <% if (locals.error) { %>
                <div class="mb-6 p-4 bg-red-50 border border-red-200 rounded-xl animate-fade-in">
                    <div class="flex items-start">
                        <i class="fas fa-exclamation-triangle text-red-500 mt-0.5 mr-3"></i>
                        <p class="text-red-700 text-sm"><%= error %></p>
                    </div>
                </div>
                <% } %>
                <!-- Password Form -->
                <form method="POST" action="/<%= shortId %>/verify" class="space-y-5">
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">
                            <i class="fas fa-shield-alt mr-2 text-indigo-600"></i> Password
                        </label>
                        <input
                            type="password"
                            name="password"
                            required
                            class="w-full px-4 py-3.5 border border-gray-300 rounded-xl focus:border-indigo-500 transition duration-200"
                            placeholder="••••••••"
                            autofocus
                        />
                    </div>

                    <button
                        type="submit"
                        class="w-full py-3.5 px-6 btn-gradient text-white font-semibold rounded-xl shadow-md hover:shadow-lg"
                    >
                        <i class="fas fa-unlock mr-2"></i> Unlock Access
                    </button>
                </form>

                <div class="mt-8 pt-6 border-t border-gray-100 text-center">
                    <a href="/" class="inline-flex items-center text-gray-600 hover:text-indigo-700 transition font-medium">
                        <i class="fas fa-arrow-left mr-1.5"></i> Back to Homepage
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- tsParticles Script -->
    <script src="https://cdn.jsdelivr.net/npm/tsparticles@2.12.0/tsparticles.bundle.min.js"></script>
    <script>
        tsParticles.load("tsparticles", {
            fpsLimit: 60,
            particles: {
                number: { value: 30, density: { enable: true, area: 800 } },
                color: { value: "#6366f1" },
                opacity: { value: 0.15 },
                size: { value: { min: 1, max: 4 } },
                move: {
                    enable: true,
                    speed: 0.8,
                    direction: "none",
                    random: true,
                    straight: false,                    outModes: "out"
                },
                links: {
                    enable: true,
                    distance: 120,
                    color: "#8b5cf6",
                    opacity: 0.12,
                    width: 1
                }
            },
            interactivity: {
                detectsOn: "canvas",
                events: {
                    onHover: { enable: true, mode: "repulse" },
                    onClick: { enable: false }
                }
            },
            detectRetina: true
        });
    </script>

    <!-- Optional: Fade-in animation for error -->
    <style>
        @keyframes fade-in {
            from { opacity: 0; transform: translateY(-5px); }
            to { opacity: 1; transform: translateY(0); }
        }
        .animate-fade-in {
            animation: fade-in 0.4s ease-out;
        }
    </style>
</body>
</html>
